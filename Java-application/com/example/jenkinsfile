pipeline {
  agent any
  stages {
    stage('Build Java application') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Run Java Application') {
      agent {
        docker { image 'openjdk:11' }
      }
      steps {
        sh 'java -jar target/hello-world-1.0-SNAPSHOT.jar'
      }
    }
  }
}
